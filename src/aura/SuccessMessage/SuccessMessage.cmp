<aura:component >
	<aura:attribute name="PlanInfoRecord" 		type="Payment_Plan__c" 	access="GLOBAL" 				/>
	<aura:attribute name="Payment" 				type="Payment__c" 		access="GLOBAL" 				/>
	<aura:attribute name="isPaymentCompleted" 	type="Boolean" 			access="GLOBAL" default="false"	/>
    <aura:registerEvent name="toggleSuccessMessageEvent" type="c:ToggleSuccessMessageEvent"/>

	<div class="payment-plan-success" aura:id="successMessage">
		<div class="grid">
			<div class="col">
				<div class="select-all-icon selected">
					<c:svgIcon svgPath="{!$Resource.SironoData + '/assets/icons/utility-sprite/svg/symbols.svg#check'}" category="utility" name="check" class="slds-button__icon"/>
				</div>
			</div>
			<div class="col">
				<h2 class="{!v.isPaymentCompleted ? 'slds-hide' : ''}">Your Payment Plan is Set!</h2>
				<h2 class="{!v.isPaymentCompleted ? '' : 'slds-hide'}">Thank you for your payment!</h2>
			</div>
		</div>
		<div class="{!v.isPaymentCompleted ? 'slds-hide' : ''}">
			<p>Next payment of <ui:outputCurrency value="{!v.PlanInfoRecord.Installment_Amount__c}" format="$#,###.##"/> scheduled for <ui:outputDate value="{!v.PlanInfoRecord.Next_Payment_Date__c}" format="MM/dd/yyyy"/></p>
			<p class="title"><em>Your @@Visa ending in 9182@@ will be charged <ui:outputCurrency value="{!v.PlanInfoRecord.Installment_Amount__c}" format="$#,###.##"/> on @@January 15, 2017@@ and on day <ui:outputText value="{!v.PlanInfoRecord.Execute_on_Day__c}"/> of each month thereafter until paid in full.</em></p>
		</div>

		<div class="{!v.isPaymentCompleted ? '' : 'slds-hide'}">
			<p>Your transaction number is (Transaction Number). A payment of (payment amount) was applied to your account and you will receive a printable receipt in your email.</p>
			<div class="slds-align--absolute-center">
				<button class="slds-button slds-button--neutral slds-not-selected" aria-live="assertive" onclick="{!c.returnToAccountSummary}">
				  	<span class="slds-text-not-selected">
				    	Return to Account Summary
					</span>
				</button>

				<button class="slds-button slds-button--neutral slds-not-selected slds-button--brand" aria-live="assertive" onclick="{!c.makeAdditionalPayment}">
				  	<span class="slds-text-not-selected">
				    	Make Additional Payment
					</span>
				</button>
			</div>
		</div>
	</div>
</aura:component>