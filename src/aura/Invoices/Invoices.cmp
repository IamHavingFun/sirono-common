<aura:component controller="WorkWithInvoicesController">
	<aura:handler event="c:collapsedHeader" action="{!c.bodyStatus}" />
    <aura:handler name="init" action="{!c.doInit}" value="{!this}"/>

    <aura:attribute name="listOfInvoices" type="List" />
    <aura:attribute name="activeTile" type="Object" />
    <aura:attribute name="groupFilter" type="String" />
    <aura:attribute name="additionalFilter" type="String" />
    <aura:handler event="c:collapsedHeader" action="{!c.bodyStatus}" />


    <aura:attribute name="invoices" type="Aura.Component[]" />

    <div class="wrapper">
        <div aura:id="payment_scroll" class="main-wrapper small alert sldsjs-tab-target slds-tabs--scoped__content slds-hide slds-show">
            <section class="invoices">
                <div class="col invoice-listing">
                    <div class="invoice-header-wrapper">
                        <header class="invoice-header_tab1">
                            <div class="col filter">
                                <div class="slds-dropdown-trigger slds-dropdown-trigger--click">
                                    <button class="slds-button slds-button--icon-border-filled" aria-haspopup="true" title="Show More">
                                        <c:svgIcon svgPath="{!$Resource.SironoData + '/assets/icons/utility-sprite/svg/symbols.svg#down'}" category="standard" size="small" name="down" />
                                        <!--<svg aria-hidden="true" class="slds-button__icon">
                                            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/assets/icons/utility-sprite/svg/symbols.svg#down"></use>
                                        </svg> -->
                                        <span class="slds-assistive-text">Show More</span>
                                    </button>
                                    <div class="slds-dropdown slds-dropdown--left">
                                        <ul class="slds-dropdown__list" role="menu">
                                            <li class="slds-dropdown__item" role="presentation"><a href="#" role="menuitem" tabindex="0"><span class="slds-truncate">Chandra Skonieczny</span></a></li>
                                            <li class="slds-dropdown__item" role="presentation"><a href="#" role="menuitem" tabindex="-1"><span class="slds-truncate">Kassie Skonieczny</span></a></li>
                                            <li class="slds-dropdown__item" role="presentation"><a href="#" role="menuitem" tabindex="-1"><span class="slds-truncate">Dean Skonieczny</span></a></li>
                                        </ul>
                                    </div>
                                </div>All Patients
                            </div>
                            <div class="col sort">
                                <div class="slds-button-group buttonGroup">
                                        <div class="slds-radio--button-group">
                                            <span class="slds-button slds-radio--button">
                                                <input type="radio" name="radio" id="unpaid" data-group-type='Unpaid' onchange="{!c.filterInvoices}" />
                                                <label class="slds-radio--button__label" for="unpaid">
                                                    <span class="slds-radio--faux">Unpaid</span>
                                                </label>
                                            </span>
                                            <span class="slds-button slds-radio--button">
                                                <input type="radio" name="radio" data-group-type='Paid' id="paid" onchange="{!c.filterInvoices}" />
                                                <label class="slds-radio--button__label" for="paid">
                                                    <span class="slds-radio--faux">Paid</span>
                                                </label>
                                            </span>
                                        </div>
                                    <div class="AddBlocksSelect">
                                        <button class="slds-button slds-button--neutral" onclick="{!c.activateSelect}">
                                            <c:svgIcon svgPath="{!$Resource.SironoData + '/assets/icons/utility-sprite/svg/symbols.svg#down'}" category="standard" size="small" name="down" />
                                        </button>
                                        <div aura:id="blockSelect" class="blockSelect">
                                            <span class="slds-button slds-radio--button">
                                                <input type="radio" name="radio" data-group-type='Overdue' id="Overdue" onchange="{!c.filterInvoices}" />
                                                <label class="slds-radio--button__label" for="Overdue">
                                                    <span class="slds-radio--faux">Overdue</span>
                                                </label>
                                            </span>
                                            <span class="slds-button slds-radio--button">
                                                <input type="radio" name="radio" data-group-type='Delinquent' id="Delinquent" onchange="{!c.filterInvoices}" />
                                                <label class="slds-radio--button__label" for="Delinquent">
                                                    <span class="slds-radio--faux">Delinquent</span>
                                                </label>
                                            </span>
                                            <span class="slds-button slds-radio--button">
                                                <input type="radio" name="radio" data-group-type='On Payment Plan' id="On Payment Plan" onchange="{!c.filterInvoices}" />
                                                <label class="slds-radio--button__label" for="On Payment Plan">
                                                    <span class="slds-radio--faux">On Payment Plan</span>
                                                </label>
                                            </span>
                                                <!--<button data-group-type='Unpaid' onclick="{!c.filterInvoices}">Unpaid</button>
                                                <button data-group-type='Paid' onclick="{!c.filterInvoices}">Paid</button>
                                                <button data-group-type='Overdue' onclick="{!c.filterInvoices}">Overdue</button>
                                                <button data-group-type='Delinquent' onclick="{!c.filterInvoices}">Delinquent</button>
                                                <button data-group-type='On Payment Plan' onclick="{!c.filterInvoices}">On Payment Plan</button>-->
                                        </div>
                                    </div>
                                </div> 
                            </div>
                        </header>
                    </div>
                    <div class="invoice-record-wrapper">
                        {!v.invoices}
                    </div>
                   
                </div>
                
                <span aura:id="invoice_details" class="invoice_details"></span> 
                <!--<c:InvoiceDetails />-->
                
            </section>
        </div>
    </div>
</aura:component>