<aura:component implements="forceCommunity:availableForAllPageTypes" access="global">
    <aura:attribute name="guarantorWrapper" type="HeaderWrapper" />
	<div class="col payment-actions">
        <div class="no-small main-body">
            <img src="{!$Resource.SironoData + '/assets/images/one-and-done.png'}" alt="One and Done" />
            <h2 class="actionsHeader">One and Done</h2>
            <p>Simple, secure and fast is our motto. Use our payment page to clear your invoice balances.</p>        
            <!-- Guarantor_Status__c != 'Paid' -->  
            <aura:if isTrue="{!(v.guarantorWrapper.contact.Guarantor_Status__c != 'Paid')}">  
                <button class="slds-button slds-button--brand btn_PayAccountFullDue" onclick="{!c.sendUnpaidFilterToHeader}">Pay Account in Full</button>
            </aura:if>
            <!-- Guarantor_Status__c != 'Paid' END -->  
        </div>
        <div class="no-small">
            <div class="slds-button-group slds_btn_group" role="group">
                <!-- Guarantor_Status__c == Due or On Payment Plan -->
                <div class="btn_groupDue">
                <aura:if isTrue="{!(v.guarantorWrapper.contact.Guarantor_Status__c == 'Due') || (v.guarantorWrapper.contact.Guarantor_Status__c == 'On Payment Plan')}">
                    <ui:button class="slds-button slds-button--neutral Due_OnPP_widget">Apply for Financial Aid</ui:button>
                </aura:if>
                </div>
                <!-- Guarantor_Status__c == Due or On Payment Plan END -->
                <!-- Guarantor_Status__c == 'Overdue' -->
                <div class="PayOverdue">
                    <aura:if isTrue="{!(v.guarantorWrapper.contact.Guarantor_Status__c == 'Overdue')}">
                        <ui:button press="{!c.sendOverdueFilterToHeader}" class="slds-button warning btn_PayOverdueTop">Pay Overdue Invoices</ui:button>
                        <ui:button class="slds-button slds-button--neutral btn_apply_aid">Apply for Financial Aid</ui:button>
                    </aura:if>
                </div>
                <!-- Guarantor_Status__c == 'Overdue' END -->
                <!-- Guarantor_Status__c == 'Delinquent' -->
                <div class="PayDelinquent">
                    <aura:if isTrue="{!(v.guarantorWrapper.contact.Guarantor_Status__c == 'Delinquent')}">
                        <ui:button press="{!c.sendDelinquentFilterToHeader}" class="slds-button slds-button--destructive btn_PayDelinquentTOP">Pay Delinquent Invoices</ui:button>
                        <ui:button class="slds-button slds-button--neutral btn_apply_aid">Apply for Financial Aid</ui:button>
                    </aura:if> 
                    </div>
                    <!-- Guarantor_Status__c == 'Delinquent' END -->
                </div>
        </div>
        <!-- Collapsed Dashboard -->
        <div class="no-big">
             <!-- Guarantor_Status__c == 'On Payment Plan' -->
            <aura:if isTrue="{!(v.guarantorWrapper.contact.Guarantor_Status__c == 'On Payment Plan')}">  
                <aura:if isTrue="{!(v.guarantorWrapper.paymentPlan.Payment_Plan_Standing__c == 'Good Standing')}">
                    <ui:button press="{!c.sendPageMakeToHeader}" class="slds-button slds-button--neutral">Make Additional Payment</ui:button>
                </aura:if>
                <aura:if isTrue="{!(v.guarantorWrapper.paymentPlan.Payment_Plan_Standing__c == 'In Error')}">
                    <ui:button press="{!c.sendPageMakeToHeader}" class="slds-button slds-button--neutral">Pay Missed Installment</ui:button>
                </aura:if>
                <aura:if isTrue="{!(v.guarantorWrapper.paymentPlan.Payment_Plan_Standing__c == 'Past Due')}">
                    <ui:button press="{!c.sendPageMakeToHeader}" class="slds-button slds-button--neutral">Pay Missed Installment</ui:button>
                </aura:if>
            </aura:if>
            <!-- Guarantor_Status__c == 'On Payment Plan' END -->
            
            <!--  Plan = false -->
            <aura:if isTrue="{!(v.guarantorWrapper.contact.Add_to_Payment_Plan__c == false)}"> 
                <aura:if isTrue="{!(v.guarantorWrapper.contact.Guarantor_Status__c == 'Due')}">
                    <button class="slds-button slds-button--brand " onclick="{!c.sendUnpaidFilterToHeader}">Pay Account in Full</button>
                </aura:if>
                <aura:if isTrue="{!(v.guarantorWrapper.contact.Guarantor_Status__c == 'Overdue')}">
                    <a onclick="{!c.sendOverdueFilterToHeader}">
                        <ui:button press="{!c.sendOverdueFilterToHeader}" class="slds-button warning ">Pay Overdue Invoices</ui:button>
                    </a>
                </aura:if>
                <aura:if isTrue="{!(v.guarantorWrapper.contact.Guarantor_Status__c == 'Delinquent')}">
                    <a onclick="{!c.sendDelinquentFilterToHeader}">
                        <ui:button press="{!c.sendDelinquentFilterToHeader}" class="slds-button slds-button--destructive ">Pay Delinquent Invoices</ui:button>
                    </a>
                </aura:if>
            </aura:if>
            <!--  Plan = false END -->  

            <!--  Plan = true -->
            <aura:if isTrue="{!(v.guarantorWrapper.contact.Add_to_Payment_Plan__c == true)}"> 
                 <!-- Guarantor_Status__c == 'Due' -->
                <aura:if isTrue="{!(v.guarantorWrapper.contact.Guarantor_Status__c == 'Due')}">
                    <aura:if isTrue="{!(v.guarantorWrapper.paymentPlan.Payment_Plan_Standing__c == 'Good Standing')}">
                        <a onclick="{!c.sendUnpaidFilterToHeader}">
                            <button class="slds-button slds-button--brand">Pay Account in Full</button>
                        </a>
                    </aura:if>
                    <aura:if isTrue="{!(v.guarantorWrapper.paymentPlan.Payment_Plan_Standing__c == 'In Error')}"> 
                        <ui:button press="{!c.sendPageMakeToHeader}" class="slds-button slds-button--neutral">Pay Missed Installment</ui:button>
                    </aura:if>
                    <aura:if isTrue="{!(v.guarantorWrapper.paymentPlan.Payment_Plan_Standing__c == 'Past Due')}"> 
                        <ui:button press="{!c.sendPageMakeToHeader}" class="slds-button slds-button--neutral">Pay Missed Installment</ui:button>
                    </aura:if>
                </aura:if>
                <!-- Guarantor_Status__c == 'Due' END --> 
                 <!-- Guarantor_Status__c == 'Overdue' -->
                <div>
                <aura:if isTrue="{!(v.guarantorWrapper.contact.Guarantor_Status__c == 'Overdue')}">   
                    <ui:button press="{!c.sendOverdueFilterToHeader}" class="slds-button warning ">Pay Overdue Invoices</ui:button> 
                </aura:if>
                </div>
                <!-- Guarantor_Status__c == 'Overdue' END --> 
                
                <!-- Guarantor_Status__c == 'Delinquent' -->
                <div>
                <aura:if isTrue="{!(v.guarantorWrapper.contact.Guarantor_Status__c == 'Delinquent')}">   
                    <ui:button press="{!c.sendDelinquentFilterToHeader}" class="slds-button slds-button--destructive btn_Pay btn_PayTop">Pay Delinquent Invoices</ui:button>  
                </aura:if>
                </div>
                <!-- Guarantor_Status__c == 'Delinquent' END -->
            
            </aura:if>
            <!--  Plan = true END -->  
        </div>
        
        <!-- Collapsed Dashboard  END --> 
    </div>
</aura:component>